  # ZMICRO_RSVM
  export RUST_HOME=/usr/local/rust
  export RUST_USER_HOME=$HOME/.rust
  export PATH=$RUST_HOME/rustc/bin:$RUST_HOME/cargo/bin:$RUST_USER_HOME/bin:$PATH

  if [ "$(os::has_command rustc)" = "true" ]; then
